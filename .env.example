# ---------------------------------------------
# üóÑÔ∏è Base de Datos
# ---------------------------------------------
# Formato: postgresql://usuario:contrase√±a@host:puerto/nombre_bd
DATABASE_URL="postgresql://postgres:password@localhost:5432/enrutapp_db"

# ---------------------------------------------
# üîê JWT (JSON Web Token)
# ---------------------------------------------
# Genera un secreto fuerte: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"

# ---------------------------------------------
# üåê Servidor
# ---------------------------------------------
PORT=3000
NODE_ENV="development"

# ---------------------------------------------
# üìß SMTP (Correo Electr√≥nico)
