  descripcion        String?  @db.Text
  estado             Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  // Relaciones
  vehiculos Vehiculos[]

  @@map("TiposVehiculo")
}

